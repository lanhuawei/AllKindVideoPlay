<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startFullScreen"
        android:text="FULLSCREEN DIRECTLY" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="danmaku"
        android:text="DANMU" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="ad"
        android:text="AD" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="rotateInFullscreen"
        android:text="ROTATE IN FULLSCREEN" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="switchPlayer"
        android:text="SWITCH PLAYER" />
</LinearLayout>